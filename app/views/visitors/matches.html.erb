<h3>Potential matches</h3>
<table>
  <tr>
   <% current_user.getpotentials.each do |person| %>
        <td>
        <li class="round-image-50"><%= image_tag(person.avatar.url) %></li>
        <strong><%= person.id %> - <%= person.email %> </strong>
          <table>
          <tr>
          <td>
          <%= link_to "Like", 'semimatch?' + {person1_id:current_user.id, person2_id: person.id}.to_param, method: :post, remote: true %>
            <li class="round-image-50"><img src="images/yes.png">Yes</img></li></td>
          <td><li class="round-image-50"><img src="images/no.png">No</img></li></td>
          </tr>
          </table>
        </li>
        </td>
   <% end %>
  </tr>
</table>

<h3>You liked</h3>
<table>
  <tr>
   <% current_user.getsentlikes.each do |person| %>
